{
    "version": "0.2",
    "language": "en",
    "ignorePaths": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**",
        "**/dist/**",
        "**/.git/**",
        "**/.github/**",
        "**/.vscode/**",
        "**/.cspell/**",
        "**/coverage/**",
        "**/logs/**",
        "**/tmp/**",
        "**/temp/**",
        "**/_site/**",
        "_config.yml"
    ],

    "files": [
        "**/*.md",
        "**/*.txt",
        "_data/**/*.json",
        "**/*.yml",
        "**/*.yaml"
    ],
    "dictionaryDefinitions": [
        {
            "name": "lakruzz",
            "path": "./.cspell/lakruzz-dictionary.txt"
        }
    ],
    "dictionaries": [
        "lakruzz"
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            "dictionaries": [
                "lakruzz"
            ]
        },
        {
            "languageId": "plaintext",
            "dictionaries": [
                "lakruzz"
            ]
        }
    ],
    "ignoreRegExpList": [
        "{%[\\s\\S]*?%}", // ignore inline liquid tags
        "^---[\\s\\S]*?^---$", // ignore YAML front matter
        "^```[\\s\\S]*?^```$", // ignore code block
        "[\\^\\s\\S]*?]", // ignore markdown footnotes
        "{%\\shighlight[\\s\\S]*?{%\\sendhighlight\\s%}", // ignore highlight liquid tag blocks
        "`.*`", // ignore inline code 
        "<code>.*</code>", // ignore HTML code tags
        "<!--.*?-->", // ignore HTML comments
        "<a.*?/>", // ignore HTML anchor tags


    ]
}
